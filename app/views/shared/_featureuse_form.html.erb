<%= form_with model: feat_use do |f| %>
    <%= f.number_field :total_units ,value: feature.max_unit_limit, required: true  %>
    <%= f.hidden_field :feature_id, value: feature.id %>
    <%= f.hidden_field :plan_id, value: plan.id %>
    <%= f.hidden_field :usage_id, value: current_user.usage.id %>
    <%= button_tag 'Submit',class: 'btn btn-primary',onclick: "disableButton('#{total}'); style = 'display: none';" %>
<% end %>


<script type="text/javascript">
    counter = 0;
  function disableButton(total) {
        counter += 1;
        if (counter == total)
        document.getElementById("subs").style.display = "";
        console.log("function called");
    }

</script>

